{
  "name": "soundboard",
  "version": "0.1.9",
  "private": true,
  "homepage": "./",
  "typings": "types.d.ts",
  "author": {
    "name": "Manuel",
    "email": "test@test.com"
  },
  "dependencies": {
    "@types/dom-mediacapture-record": "^1.0.7",
    "@types/mime": "^2.0.3",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.3.1",
    "electron-updater": "^4.3.5",
    "mime": "^2.5.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "react-start": "yarn compile | react-scripts start",
    "start": "concurrently 'yarn react-start' 'wait-on http://localhost:3000 && electron build/electron.js'",
    "winStart": "concurrently \"yarn react-start\" \"wait-on http://localhost:3000 && yarn electron .\\build\\electron.js\"",
    "electron-build": "electron-builder",
    "compile": "tsc -p tsconfig.electron.json",
    "compile-watch": "tsc -p tsconfig.electron.json -w",
    "build": "react-scripts build && yarn compile",
    "test": "react-scripts test",
    "e-dev": "electron build/electron.js",
    "eject": "react-scripts eject",
    "electron-pack": "electron-builder --em.main=build/main.js"
  },
  "build": {
    "icon": "/build/icon.png",
    "appId": "com.example.electron-cra",
    "linux": {
      "target": [
        {
          "target": "AppImage"
        }
      ]
    },
    "win": {
        	"publisherName": "Manuel",
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": "ia32"
        }
      ]
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "concurrently": "^5.3.0",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.1",
    "electron-pack": "^1.3.2",
    "electron-reload": "^1.5.0",
    "nodemon": "^2.0.7",
    "typescript": "^4.1.3",
    "wait-on": "^5.2.1"
  }
}
